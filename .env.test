# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Database Configuration for Tests
# Use a separate test database or schema to avoid conflicts
# Example: postgresql://user:password@localhost:5432/flash_investing_test
DATABASE_URL="postgresql://user:password@localhost:5432/flash_investing_test"

# JWT Configuration for Tests
# Use test-specific secrets (can be different from production)
JWT_SECRET="test-jwt-secret-key-minimum-32-characters-long-for-testing-purposes"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="test-refresh-secret-key-minimum-32-characters-long-for-testing"
JWT_REFRESH_EXPIRES_IN="7d"

# Bcrypt Configuration for Tests
# Use lower rounds for faster test execution
BCRYPT_ROUNDS=4

# External API Configuration for Tests
# Use mock or test credentials
PLUGGY_CLIENT_ID="test-pluggy-client-id"
PLUGGY_CLIENT_SECRET="test-pluggy-client-secret"
PLUGGY_BASE_URL="https://api.pluggy.ai"

# Additional test-specific configurations
TEST_TIMEOUT=30000
TEST_DATABASE_POOL_SIZE=10

# Optional: Disable external integrations in tests
DISABLE_EXTERNAL_APIS=true
MOCK_EXTERNAL_SERVICES=true